class Solution {
public:

Node* connect(Node* root){
  if(!root)
   return NULL;
   
   if(root->left){
     root->left->left= root->right;
     
   if(root->next){
     root->left->next= root->next->left;
    }
    root->left= connect(root->left);
    root->right= connect(root->right);
   }
   return root;
  }
};
